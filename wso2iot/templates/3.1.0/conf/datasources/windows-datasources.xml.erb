<datasources-configuration xmlns:svns="http://org.wso2.securevault/configuration">
	<providers>
		<provider>org.wso2.carbon.ndatasource.rdbms.RDBMSDataSourceReader</provider>
	</providers>

	<datasources>
<%- @windows_datasources.keys.sort.each do |datasource| -%>
        <datasource>
            <name><%= @windows_datasources[datasource]['name'] %></name>
            <description><%= @windows_datasources[datasource]['description'] %></description>
            <jndiConfig>
                <name><%= @windows_datasources[datasource]['jndi_config'] %></name>
            </jndiConfig>
            <definition type="RDBMS">
                <configuration>
                    <url><%= @windows_datasources[datasource]['url'] %></url>
                    <username><%= @windows_datasources[datasource]['username'] %></username>
                    <password><%= @windows_datasources[datasource]['password'] %></password>
                    <driverClassName><%= @windows_datasources[datasource]['driver_class_name'] %></driverClassName>
                    <defaultAutoCommit><%= @windows_datasources[datasource]['default_auto_commit'] %></defaultAutoCommit>
                    <maxActive><%= @windows_datasources[datasource]['max_active'] %></maxActive>
                    <minIdle><%= @windows_datasources[datasource]['min_idle'] %></minIdle>
                    <maxWait><%= @windows_datasources[datasource]['max_wait'] %></maxWait>
                    <testOnBorrow><%= @windows_datasources[datasource]['test_on_borrow'] %></testOnBorrow>
                    <validationQuery><%= @windows_datasources[datasource]['validation_query'] %></validationQuery>
                    <validationInterval><%= @windows_datasources[datasource]['validation_interval'] %></validationInterval>
                </configuration>
            </definition>
        </datasource>
<%- end -%>
	</datasources>
</datasources-configuration>

